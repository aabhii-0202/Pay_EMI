<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:cardCornerRadius="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:src="@drawable/ic_shape"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="48dp"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="-16dp"
        app:cardBackgroundColor="#dddddd"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toTopOf="@+id/card"
        tools:layout_editor_absoluteX="16dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="8dp">





        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add missing information for"
            android:textSize="18sp"
            android:textColor="@color/grey2"
            android:fontFamily="@font/gtwalsheim_pro_medium"
            android:layout_marginTop="24dp"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Axis finance Loan Account Number - 12345689"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:fontFamily="@font/gtwalsheim_pro_regular"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loan Type"
            android:textColor="@color/grey"
            android:fontFamily="@font/gtwalsheim_pro_regular"
            android:textSize="14sp"
            android:layout_marginTop="24sp"/>

        <EditText
            android:id="@+id/loantype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select"
            android:textColorHint="@color/HintColor"
            android:textColor="@color/black"
            android:background="@drawable/input_box_layout"
            android:textSize="13sp"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:inputType="none"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loan Amount"
            android:textColor="@color/grey"
            android:fontFamily="@font/gtwalsheim_pro_regular"
            android:textSize="14sp"
            android:layout_marginTop="24sp"/>

        <EditText
            android:id="@+id/loanamount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Your Total Loan Amount"
            android:textColorHint="@color/HintColor"
            android:textColor="@color/black"
            android:background="@drawable/input_box_layout"
            android:textSize="13sp"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EMI"
            android:textColor="@color/grey"
            android:fontFamily="@font/gtwalsheim_pro_regular"
            android:textSize="14sp"
            android:layout_marginTop="24sp"/>

        <EditText
            android:id="@+id/emi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Your Monthly EMI Amount"
            android:textColorHint="@color/HintColor"
            android:textColor="@color/black"
            android:background="@drawable/input_box_layout"
            android:textSize="13sp"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="@color/grey"
            android:fontFamily="@font/gtwalsheim_pro_regular"
            android:textSize="14sp"
            android:layout_marginTop="24sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Month"
                android:textColorHint="@color/HintColor"
                android:textColor="@color/black"
                android:background="@drawable/input_box_layout"
                android:textSize="13sp"
                android:padding="16dp"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:inputType="none"/>

            <EditText
                android:id="@+id/year"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Year"
                android:textColorHint="@color/HintColor"
                android:textColor="@color/black"
                android:background="@drawable/input_box_layout"
                android:textSize="13sp"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:inputType="none"/>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg"
            android:layout_marginTop="24dp"
            android:text="Update"
            android:textAllCaps="false"
            android:letterSpacing="0"
            android:layout_marginBottom="16dp"
            android:textColor="@color/white"
            android:fontFamily="@font/gtwalsheim_pro_medium"
            android:id="@+id/update"/>
    </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>