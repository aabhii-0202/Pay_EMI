<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/datalayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/profilecard"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="60dp">
                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_launcher_background"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/editprofilepic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textColor="@color/btncolor"
                android:fontFamily="@font/gtwalsheim_pro_regular"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/profile_screen_bg"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp"
                android:layout_marginHorizontal="16dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name"
                    android:textSize="14sp"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/gtwalsheim_pro_regular"/>

                <EditText
                    android:id="@+id/profilename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abhishek Kumar Singh"
                    android:hint="Name"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/gtwalsheim_pro_medium"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/profile_screen_bg"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/profile_screen_bg"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp"
                android:layout_marginHorizontal="16dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="14sp"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/gtwalsheim_pro_regular"/>

                <EditText
                    android:id="@+id/profilemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="abhi1234@gmail.com"
                    android:hint="Email"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/gtwalsheim_pro_medium"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/profile_screen_bg"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/profile_screen_bg"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp"
                android:layout_marginHorizontal="16dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textSize="14sp"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/gtwalsheim_pro_regular"/>

                <TextView
                    android:id="@+id/profilephone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="123456789"
                    android:textSize="16sp"
                    android:fontFamily="@font/gtwalsheim_pro_medium"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/profile_screen_bg"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/profile_screen_bg"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp"
                android:layout_marginHorizontal="16dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textSize="14sp"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/gtwalsheim_pro_regular"/>

                <EditText
                    android:id="@+id/profileUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="_aabhii"
                    android:hint="User Name"
                    android:textSize="16sp"
                    android:fontFamily="@font/gtwalsheim_pro_medium"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/profile_screen_bg"/>
            </LinearLayout>



                <EditText
                    android:id="@+id/profileaddress"
                    android:layout_marginHorizontal="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="5"
                    android:gravity="top|start"
                    android:background="@drawable/profile_screen_bg"
                    android:fontFamily="@font/gtwalsheim_pro_medium"
                    android:textSize="14sp"
                    android:scrollbars="vertical"
                    android:layout_marginTop="16dp"
                    android:paddingVertical="16dp"
                    android:paddingHorizontal="24dp"
                    android:hint="Address"
                    android:textColorHint="@color/HintColor"
                    android:textColor="@color/black" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="16dp"
                android:text="Update"
                android:textSize="22sp"
                android:textAllCaps="false"
                android:letterSpacing="0"
                android:id="@+id/profileupdate"
                android:layout_marginBottom="24dp"
                android:background="@drawable/button_bg"
                android:fontFamily="@font/gtwalsheim_pro_medium"/>



        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        android:id="@+id/progress"/>
</androidx.constraintlayout.widget.ConstraintLayout>