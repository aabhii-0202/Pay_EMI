<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="190dp"
    android:layout_height="122dp"
    android:layout_marginStart="17dp"
    android:layout_marginTop="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cardbankname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment to HDFC Bank"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/gtwalsheim_pro_regular"/>
        <TextView
            android:id="@+id/cardloanname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Car Loan"
            android:textSize="12sp"
            android:textColor="@color/grey2"
            android:layout_marginTop="2dp"
            />

        <TextView
            android:id="@+id/cardamount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹ 14,288"
            android:textColor="@color/black"
            android:fontFamily="@font/gtwalsheim_pro_medium"
            android:textSize="24sp"
            android:layout_marginTop="8dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            >

            <TextView
                android:id="@+id/statusanddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Paid | 15 Oct"
                android:textSize="12sp"
                android:fontFamily="@font/gtwalsheim_pro_medium"
                android:textColor="@color/grey2"
                app:drawableStartCompat="@drawable/ic_tick" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="48dp"
                android:src="@drawable/ic_rightarrowvector" />

        </LinearLayout>





    </LinearLayout>

</androidx.cardview.widget.CardView>