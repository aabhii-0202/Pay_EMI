                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp">

                <Button
                    android:id="@+id/share"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gtwalsheim_pro_medium"
                    android:text="Share"
                    android:textAllCaps="false"
                    android:letterSpacing="0"
                    app:icon="@drawable/ic_sharevector"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/guideline"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="@color/btncolor"
                    android:textColor="@color/btncolor"
                    app:strokeWidth="1dp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent=".5" />


                <Button
                    android:id="@+id/download"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gtwalsheim_pro_medium"
                    android:text="Download"
                    app:icon="@drawable/ic_downloadvector"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.538"
                    app:layout_constraintStart_toEndOf="@id/guideline"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textColor="@color/btncolor"
                    android:textAllCaps="false"
                    android:letterSpacing="0"
                    app:strokeColor="@color/btncolor"
                    app:strokeWidth="1dp" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:layout_width="152dp"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/playlogo" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/logos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/makeinindia"
                    android:layout_width="60dp"
                    android:layout_height="19dp"
                    android:src="@drawable/make_in_india"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/norton"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/norton"
                    android:layout_width="60dp"
                    android:layout_height="19dp"
                    android:src="@drawable/ic_norton_antivirus_logo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/securepay"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/makeinindia"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/securepay"
                    android:layout_width="60dp"
                    android:layout_height="19dp"
                    android:src="@drawable/secure"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/verysign"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/norton"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/verysign"
                    android:layout_width="60dp"
                    android:layout_height="19dp"
                    android:src="@drawable/ic_veri_sign_logo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/securepay"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
